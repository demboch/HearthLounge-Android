<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/dark_grey"
    android:columnCount="3"
    android:rowCount="6"

    android:layout_width="match_parent" android:layout_height="match_parent">



    <ImageButton
        android:id="@+id/mage_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="5dp"
        android:layout_row="0"
        android:scaleType="fitXY"
        android:background="@color/dark_grey"
        android:src="@drawable/icon_mage" />

    <ImageButton
        android:id="@+id/priest_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_row="0"
        android:background="@color/dark_grey"
        android:scaleType="fitXY"
        android:src="@drawable/icon_priest" />

    <ImageButton
        android:id="@+id/druid_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="3dp"
        android:layout_row="0"
        android:background="@color/dark_grey"
        android:scaleType="fitXY"
        android:src="@drawable/icon_druid" />

    <TextView
        android:id="@+id/text_mage"
        android:layout_width="126sp"
        android:layout_marginTop="3dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginLeft="3dp"
        android:textColor="@color/common"
        android:layout_row="1"
        android:text="Mage"
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/text_priest"
        android:layout_width="126sp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:layout_row="1"
        android:text="Priest"
        android:textAlignment="center"
        android:textColor="@color/common"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/text_druid"
        android:layout_width="126sp"
        android:layout_marginTop="3dp"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_marginLeft="3dp"
        android:textColor="@color/common"
        android:layout_row="1"
        android:layout_marginBottom="30dp"
        android:text="Druid"
        android:textAlignment="center"
        android:textSize="20dp" />

    <ImageButton
        android:id="@+id/paladin_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="5dp"
        android:layout_row="2"
        android:scaleType="fitXY"
        android:background="@color/dark_grey"
        android:src="@drawable/icon_paladin" />

    <ImageButton
        android:id="@+id/hunter_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_row="2"
        android:background="@color/dark_grey"
        android:scaleType="fitXY"
        android:src="@drawable/icon_hunter" />

    <ImageButton
        android:id="@+id/warlock_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="3dp"
        android:layout_row="2"
        android:background="@color/dark_grey"
        android:scaleType="fitXY"
        android:src="@drawable/icon_warlock" />

    <TextView
        android:id="@+id/text_paladin"
        android:layout_width="126sp"
        android:layout_marginTop="3dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="30dp"
        android:textColor="@color/common"
        android:layout_row="3"
        android:text="Paladin"
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/text_hunter"
        android:layout_width="126sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_column="1"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/common"
        android:layout_row="3"
        android:text="Hunter"
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/text_warlock"
        android:layout_width="126sp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="30dp"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_marginLeft="5dp"
        android:textColor="@color/common"
        android:layout_row="3"
        android:text="Warlock"
        android:textAlignment="center"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/shaman_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="5dp"
        android:layout_row="4"
        android:scaleType="fitXY"
        android:background="@color/dark_grey"
        android:src="@drawable/icon_shaman" />

    <ImageButton
        android:id="@+id/rogue_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_row="4"
        android:background="@color/dark_grey"
        android:scaleType="fitXY"
        android:src="@drawable/icon_rogue" />

    <ImageButton
        android:id="@+id/warrior_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="3dp"
        android:layout_row="4"
        android:background="@color/dark_grey"
        android:scaleType="fitXY"
        android:src="@drawable/icon_warrior" />

    <TextView
        android:id="@+id/text_shaman"
        android:layout_width="126sp"
        android:layout_marginTop="3dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginLeft="3dp"
        android:textColor="@color/common"
        android:layout_row="5"
        android:text="Shaman"
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/text_rogue"
        android:layout_width="126sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_column="1"
        android:layout_marginLeft="5dp"
        android:textColor="@color/common"
        android:layout_row="5"
        android:text="Hunter"
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/text_warrior"
        android:layout_width="126sp"
        android:layout_marginTop="3dp"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_marginLeft="5dp"
        android:textColor="@color/common"
        android:layout_row="5"
        android:text="Warlock"
        android:textAlignment="center"
        android:textSize="20sp" />

</GridLayout>