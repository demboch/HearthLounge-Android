<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_grey"
    android:id="@+id/drawer_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/navigation_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:columnCount="2"
                android:rowCount="6"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/frame_decks"
                    android:layout_width="155dp"
                    android:layout_height="155dp"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:background="@color/dark_grey"
                    android:layout_column="0"
                    android:layout_row="0">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/button_decks"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:background="?android:attr/selectableItemBackground"
                        android:scaleType="fitCenter"
                        android:src="@drawable/deck" />

                    <TextView
                        android:id="@+id/text_decks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:text="DECKS"
                        android:textColor="@color/primary_font_color"
                        android:textSize="20dp" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="155dp"
                    android:layout_height="155dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:background="@color/dark_grey"
                    android:layout_column="0"
                    android:layout_row="1">

                    <ImageButton
                        android:id="@+id/button_expansions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:background="?android:attr/selectableItemBackground"
                        android:scaleType="fitCenter"
                        android:src="@drawable/expansions" />

                    <TextView
                        android:id="@+id/text_expansions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:text="EXPANSIONS"
                        android:textColor="@color/primary_font_color"
                        android:textSize="20dp" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="155dp"
                    android:layout_height="155dp"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:background="@color/dark_grey"
                    android:layout_column="0"
                    android:layout_row="2">

                    <ImageButton
                        android:id="@+id/button_reddit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:background="?android:attr/selectableItemBackground"
                        android:scaleType="fitCenter"
                        android:src="@drawable/reddit" />

                    <TextView
                        android:id="@+id/text_reddit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:text="REDDIT"
                        android:textColor="@color/primary_font_color"
                        android:textSize="20dp" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="155dp"
                    android:layout_height="155dp"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"

                    android:background="@color/dark_grey"
                    android:layout_column="1"
                    android:layout_row="0">

                    <ImageButton
                        android:id="@+id/button_cards"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:background="?android:attr/selectableItemBackground"
                        android:scaleType="fitCenter"
                        android:src="@drawable/card" />

                    <TextView
                        android:id="@+id/text_cards"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:text="CARDS"
                        android:textColor="@color/primary_font_color"
                        android:textSize="20dp" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="155dp"
                    android:layout_height="155dp"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@color/dark_grey"
                    android:layout_column="1"
                    android:layout_row="1">

                    <ImageButton
                        android:id="@+id/button_adventures"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:background="?android:attr/selectableItemBackground"
                        android:scaleType="fitCenter"
                        android:src="@drawable/adventures" />

                    <TextView
                        android:id="@+id/text_adventures"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:text="ADVENTURES"
                        android:textColor="@color/primary_font_color"
                        android:textSize="20dp" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="155dp"
                    android:layout_height="155dp"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@color/dark_grey"
                    android:layout_column="1"
                    android:layout_row="2">

                    <ImageButton
                        android:id="@+id/button_position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:background="?android:attr/selectableItemBackground"
                        android:scaleType="fitCenter"
                        android:src="@drawable/position" />

                    <TextView
                        android:id="@+id/text_position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:text="POSITION"
                        android:textColor="@color/primary_font_color"
                        android:textSize="20dp" />

                </FrameLayout>

            </GridLayout>

        </ScrollView>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/light_grey"
        app:menu="@menu/navigation_bar"
        app:headerLayout="@layout/navigation_header">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>

